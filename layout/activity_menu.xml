<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.vam1994.whyw8.Menu">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Menu"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:id="@+id/titleMenu"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/placeOrderButton"
            android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/placeOrderButton"
        android:layout_width="102dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="482dp"
        android:layout_marginEnd="2dp"
        android:background="@color/colorAccent"
        android:text="Place Order"
        android:textColor="#FFFFFF" />

    <ListView
        android:id="@+id/listViewMenu"
        android:layout_width="241dp"
        android:layout_height="449dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="17dp"
        android:layout_toEndOf="@+id/titleMenu"
        android:choiceMode="none" />

    <TextView
        android:id="@+id/ordertotal"
        android:layout_width="98dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="264dp"
        android:layout_marginTop="401dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="82dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <ListView
        android:id="@+id/ordered"
        android:layout_width="118dp"
        android:layout_height="308dp"
        android:layout_alignTop="@+id/titleMenu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="170dp"
        android:theme="@android:style/Widget.ListView.White" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="112dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="246dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="474dp"
        android:text="Ordered"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>

